@model Cine.DAL.Entities.Gender

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Crear Clasificación</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GenderName" class="control-label"></label>
                <input asp-for="GenderName" class="form-control" />
                <span asp-validation-for="GenderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>           
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
